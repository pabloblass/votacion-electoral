generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Rol {
  ADMINISTRADOR
  USUARIO_RECINTO
  TRANSCRIPTOR
}

model Usuario {
  id                    Int               @id @default(autoincrement())
  nombre_apellido       String            @db.VarChar(150)
  username              String            @db.VarChar(30) @unique
  password              String?           @db.VarChar(250)
  rol                   Rol
  activo                Boolean           @default(true)
  fecha_creacion        DateTime          @default(now()) @db.Timestamptz(3)
  fecha_actualizacion   DateTime          @updatedAt @db.Timestamptz(3)

  @@map("usuarios")
}

model Departamento {
  id                    Int               @id @default(autoincrement())
  descripcion           String            @db.VarChar(250)
  activo                Boolean           @default(true)
  fecha_creacion        DateTime          @default(now()) @db.Timestamptz(3)
  fecha_actualizacion   DateTime          @updatedAt @db.Timestamptz(3)
  municipios            Municipio[]

  @@map("departamentos")
}

model Municipio {
  id                    Int               @id @default(autoincrement())
  departamento          Departamento      @relation(fields: [id_departamento], references: [id])
  id_departamento       Int
  descripcion           String            @db.VarChar(250)
  activo                Boolean           @default(true)
  fecha_creacion        DateTime          @default(now()) @db.Timestamptz(3)
  fecha_actualizacion   DateTime          @updatedAt @db.Timestamptz(3)
  recintos              Recinto[]

  @@map("municipios")
}

model Recinto {
  id                    Int               @id @default(autoincrement())
  municipio             Municipio         @relation(fields: [id_municipio], references: [id])
  id_municipio          Int
  descripcion           String            @db.VarChar(250)
  activo                Boolean           @default(true)
  fecha_creacion        DateTime          @default(now()) @db.Timestamptz(3)
  fecha_actualizacion   DateTime          @updatedAt @db.Timestamptz(3)
  mesas                 Mesa[]

  @@map("recintos")
}

model Mesa {
  id                    Int               @id @default(autoincrement())
  recinto               Recinto           @relation(fields: [id_recinto], references: [id])
  id_recinto            Int
  //codigo                BigInt
  numero                Int
  habilitados           Int
  activo                Boolean           @default(true)
  fecha_creacion        DateTime          @default(now()) @db.Timestamptz(3)
  fecha_actualizacion   DateTime          @updatedAt @db.Timestamptz(3)

  @@map("mesas")
}